{
  "name": "sunbeams",
  "version": "0.3.0",
  "description": "a little something to brighten your day",
  "author": "Cassidy Spring <79487947+cassiecascade@users.noreply.github.com>",
  "license": "MPL-2.0",
  "homepage": "https://github.com/sunbeamsanctuary/sunbeams#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sunbeamsanctuary/sunbeams.git"
  },
  "bugs": {
    "url": "https://github.com/sunbeamsanctuary/sunbeams/issues"
  },
  "bin": {
    "sunbeams": "./dist/sunbeams.js"
  },
  "scripts": {
    "clean": "ts-node tasks/clean",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/sunbeams",
    "lint": "ts-node src/sunbeams.ts lint",
    "format": "ts-node src/sunbeams.ts format",
    "prepack": "npm run build",
    "postpack": "npm run clean"
  },
  "dependencies": {
    "@nestjs/common": "^9.4.0",
    "@sunbeams/eslint-config": "^0.1.0",
    "eslint": "^8.39.0",
    "nest-commander": "^3.6.2",
    "prettier": "^2.8.8",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/validator": "^13.7.15",
    "jest": "^29.5.0",
    "jest-extended": "^3.2.4",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "coveragePathIgnorePatterns": [
      "/src/sunbeams.ts",
      "/tasks/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/"
    ]
  }
}
